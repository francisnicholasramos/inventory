<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Velocit√©</title>
        <link href="/styles/build.css" rel="stylesheet" />
    </head>
    <body>
        <%- include('partials/header') %>
        <div class="flex flex-col gap-5 p-2 justify-center m-auto min-w-[320px] max-w-[1200px]">
            <form
                    action="/item/update/<%= item.id %>"
                    method="POST"
                    class="flex flex-col mt-10 w-full bg-white border border-gray-300 shadow-md rounded-md p-8 space-y-5"
                    >
                    <div class="flex flex-col">
                        <label for="name" class="font-medium text-gray-700 mb-1">Item Name</label>
                        <input
                                id="name"
                                name="name"
                                type="text"
                                placeholder="e.g. Classic crankset"
                                class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#245c52] focus:border-[#245c52] transition"
                                value="<%= item.item_name %>"
                                />
                    </div>

                    <div class="flex flex-col">
                        <label for="desc" class="font-medium text-gray-700 mb-1">Description</label>
                        <input
                                id="desc"
                                name="description"
                                type="text"
                                placeholder="Short details about the item"
                                class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#245c52] focus:border-[#245c52] transition"
                                value="<%= item.description %>"
                                />
                    </div>

                    <div class="flex flex-col">
                        <label for="price" class="font-medium text-gray-700 mb-1">Price</label>
                        <input
                                id="price"
                                name="price"
                                type="number"
                                placeholder="Enter price"
                                class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#245c52] focus:border-[#245c52] transition"
                                value="<%= item.price %>"
                                />
                    </div>

                    <div class="flex flex-col">
                        <label for="category" class="font-medium text-gray-700 mb-1">Category</label>
                        <select
                                id="category"
                                name="category"
                                class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#245c52] focus:border-[#245c52] transition"
                                >
                                <% categories.forEach((category) => { %>
                                <option 
                                    value="<%= category.id %>"
                                    <%= category.id === item.category_id ? 'selected' : '' %>
                                >
                                    <%= category.category %>
                                </option>
                                <% }) %>
                        </select>
                    </div>

                    <button
                            type="submit"
                            class="bg-[#245c52] text-white font-semibold px-6 py-2 rounded-md cursor-pointer hover:bg-[#2b6e63] transition-colors duration-150"
                            >
                            Submit Changes
                    </button>
            </form>

            <button 
                class="w-fit block ml-auto md:ml-0 border border-[#245c52] text-[#245c52] font-semibold px-2 py-1 rounded-md cursor-pointer"
                onclick="window.location.href='/components/<%= item.id %>'"
                >
                <<
                Go Back
            </button>
        </div>
    </body>
</html>

