<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Velocit√©</title>
        <link href="/styles/build.css" rel="stylesheet" />
    </head>
    <body>
        <%- include("partials/header") %>
        <div class="flex flex-col gap-5 mt-10 p-2 justify-center m-auto min-w-[320px] max-w-[1200px]">

            <div class="w-full ">
                <div class="flex justify-between items-center mb-8">
                    <h2 class="text-3xl font-semibold text-gray-800 tracking-tight">Categories</h2>
                </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-7">
                        <% categoryList.forEach((category) => { %>
                            <form action="/filter/components" method="GET">
                                    <input
                                        type="hidden"
                                        name="category"
                                        value="<%= category.id %>"
                                    />
                                    <button
                                        type="submit"
                                        class="relative cursor-pointer w-full flex flex-col items-center justify-center text-center p-6 rounded-2xl border border-gray-200 bg-gradient-to-br from-white via-gray-50 to-gray-100 shadow-[0_2px_10px_rgba(0,0,0,0.05)] hover:shadow-[0_4px_20px_rgba(0,0,0,0.08)] hover:-translate-y-1.5 transition-all duration-300"
                                    >
                                        <div class="absolute top-0 left-0 w-full h-1.5 rounded-t-2xl bg-[#245c52]"></div>

                                        <div class="flex items-center justify-center w-16 h-16 rounded-full bg-[#245c52] text-white text-2xl font-semibold shadow-inner mb-4">
                                            <%= category.category[0].toUpperCase() %>
                                        </div>

                                        <p class="text-gray-700 font-medium text-lg truncate w-full" title="<%= category.category %>">
                                            <%= category.category %>
                                        </p>

                                    </button>
                            </form>
                        <% }) %>
                    </div>
            </div>

            <form 
                action="/category/new" 
                method="POST"
                class="flex flex-col mt-10 w-full bg-white border border-gray-300 shadow-md rounded-md p-8 space-y-5"
            >
                <div class="flex flex-col">
                    <label for="category" class="font-medium text-gray-700 mb-1">Add Category</label>
                    <input
                        id="category"
                        name="category_name"
                        type="text"
                        autocomplete="off"
                        placeholder="e.g. Chains"
                        class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#245c52] focus:border-[#245c52] transition"
                    />
                </div>
                <button
                        type="submit"
                        class="bg-[#245c52] text-white font-semibold px-6 py-2 rounded-md cursor-pointer hover:bg-[#2b6e63] transition-colors duration-150"
                        >
                        Add Category
                </button>
            </form>
        </div>
    </body>
</html>
