<!-- side bar -->
<div class="flex flex-col p-3 gap-5 border border-gray-300">
    <input type="text" placeholder="🔍︎ Search" class="px-3 py-1 border border-gray-400 rounded outline-none text-[#4d4d4d]"/>

    <% const category = ['Bars', 'Bells', 'Bikes', 'Brakes', 'Cranksets', 'Crankarms', 'Chains', 'Fenders']; %>

    <div class="flex flex-col gap-1"> 
        <h2 class="text-[#333] font-semibold">Filter Your Search:</h2>
        <% for (let i=0; i < category.length; i++) { %>
        <div class="flex gap-2">
            <input type="checkbox" id="<%= category[i] %>"/>
            <label for="<%= category[i] %>" class="text-[#333] font-[Inter]"> <%= category[i] %> </label>
        </div>
        <% } %>
    </div>
</div>
